	entityMarker=".">
	<rules>
		<!-- http://sigel.staatsbibliothek-berlin.de/en/vergabe/adressenformat/092/ -->
		<data source="032P.a" name="_id">
			<case to="lower" />
			<replace pattern="[\.\-\s]" with="" />
			<replace pattern="straÃŸe" with="str" />
			<replace pattern="platz" with="pl" />		
		</data>
		<data source="032P.a" name="streetNumber"></data>
		<combine name="postalCodeVisitors" value="${pstCd}" sameEntity="true">
