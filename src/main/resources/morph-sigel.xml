<?xml version="1.0" encoding="UTF-8"?>
<metamorph xmlns="http://www.culturegraph.org/metamorph"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1"
	entityMarker=".">
	<rules>
		<!-- http://sigel.staatsbibliothek-berlin.de/en/vergabe/adressenformat/092/ -->
				
		<combine name="_id" value="${id}" sameEntity="true">
			<if>
				<data source="032P.2">
					<equals string = "S" />
				</data>
			</if>					
			<data source="032P.a" name="id">		
				<case to="lower" />
				<replace pattern="[\/\.\-\s]" with="" />
				<replace pattern="straÃŸe" with="str" />
				<replace pattern="platz" with="pl" />		
			</data>		
		</combine>
		
		<combine name="streetNumber" value="${strtNmb}" sameEntity="true">
			<if>
				<data source="032P.2">
					<equals string = "S" />
				</data>
			</if>					
			<data source="032P.a" name="strtNmb" />		
		</combine>	
	
		<combine name="postalCodeVisitors" value="${pstCd}" sameEntity="true">
			<if>
				<data source="032P.2">
					<equals string = "S" />
				</data>
			</if>
			<data source="032P.e" name="pstCd" />
		</combine>	
					
		<data source="_else"></data>
		
	</rules>
</metamorph>